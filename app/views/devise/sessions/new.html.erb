<h2>Sign in</h2>
<div class="ui two column grid page">
  <div class="ui five wide column form segment ">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field"><%= f.label :Account %>
        <%= f.text_field :uid, autofocus: true %></div>

      <div class="field"><%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %></div>

      <!-- <% if devise_mapping.rememberable? -%> -->
      <!--   <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div> -->
      <!-- <% end -%> -->

      <div><%= f.submit "Login", class: "ui sugmit button blue" %></div>
    <% end %>

    <!-- <%= render "devise/shared/links" %> -->
  </div>
</div>
